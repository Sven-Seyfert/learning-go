# https://golangci-lint.run/usage/configuration/

output:
  format: colored-line-number
  print-issued-lines: true
  print-linter-name: true
  sort-results: true

linters:
  enable-all: true
  disable:
    - deadcode
    - exhaustivestruct
    - gci
    - gofmt
    - gofumpt
    - goimports
    - golint
    - ifshort
    - interfacer
    - maligned
    - nosnakecase
    - paralleltest
    - scopelint
    - structcheck
    - varcheck
    - wrapcheck
  # fast: true
